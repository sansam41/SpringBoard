<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybits.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.BoardAttachMapper">

<insert id="insert">
	insert into tb1_attach (uuid, uploadpath,filename, filetype, bno) 
	values (#{uuid},#{uploadPath},#{fileName},#{fileType},#{bno})
</insert>

<delete id="delete">
	delete from tb1_attach where uuid=#{uuid}
</delete>

<select id="findByBno" resultType="org.zerock.domain.BoardAttachVO">
	select * from tb1_attach where bno=#{bno}
</select>
<select id="getOldFiles" resultType="org.zerock.domain.BoardAttachVO">
	select * from tb1_attach where uploadpath=to_char(sysdate -1,'yyyy\mm\dd')
</select>
<delete id="deleteAll">
	delete tb1_attach where bno=#{bno}
</delete>
</mapper>